<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ambraproject.rhino.model" default-lazy="false">

  <class name="Annotation" table="annotation">
    <id name="ID" column="annotationID" type="long">
      <generator class="native"/>
    </id>

    <timestamp name="lastModified" column="lastModified"/>
    <property name="created" column="created" type="timestamp" not-null="true" update="false"/>

    <property name="type" column="type" not-null="true">
      <type name="org.ambraproject.rhino.config.HibernateAdaptingType">
        <param name="class">org.ambraproject.rhino.model.AnnotationType</param>
        <param name="adapter">ADAPTER</param>
      </type>
    </property>

    <property name="userProfileID" type="long" column="userProfileID" not-null="true"/>
    <property name="articleID" type="long" column="articleID" not-null="true"/>
    <property name="annotationUri" type="string" column="annotationURI" unique="true"/>

    <property name="parentID" type="long" column="parentID"/>

    <property name="title" column="title" type="text"/>
    <property name="body" column="body" type="text"/>
    <property name="highlightedText" column="highlightedText" type="text"/>
    <property name="competingInterestBody" type="text" column="competingInterestBody"/>

  </class>

</hibernate-mapping>
